<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Display for showing input and result -->
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="32sp"
            android:text="@string/_0"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Buttons grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            android:layout_gravity="center">

            <!-- Row 1 -->
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:layout_columnSpan="3"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF6347"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/divsign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF8C00"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />

            <!-- Row 2 -->
            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_7"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_8"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_9"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mulsign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF8C00"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_4"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_5"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_6"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/minussign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF8C00"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/plussign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF8C00"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />

            <!-- Row 5 -->
            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2" />
            <Button
                android:id="@+id/buttonDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/spanishdecimalsign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:layout_columnWeight="1" />
            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/equalsign"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:background="#FF8C00"
                android:textColor="#FFFFFF"
                android:layout_columnWeight="1" />
        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>